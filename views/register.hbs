<div id="marginTop" class="container">
    <a id="aCoima" href="/home">
        <h1 id="txtAlignCenter" class="display-2"><span class="fa fa-film"></span>COIMA</h1>
        <h1 id="txtAlignCenter" class="lead">Register to manage your movie lists as you wish</h1>
    </a>
    <form method="post" action="/auth/register">
        <div class="form-group">
            <label class="lead">Email:</label>
            <input type="email" name="email" class="form-control" required/>
        </div>
        <div class="form-group">
            <label class="lead">FullName:</label>
            <input type="text" name="fullName" class="form-control" required/>
        </div>
        <div class="form-group">
            <label class="lead">Username:</label>
            <input type="text" name="username" class="form-control" required/>
        </div>
        {{#if registerError.message}}
            <div class="alert alert-warning" role="alert">
                <strong>Warning! {{registerError.message}}</strong>
            </div>
        {{/if}}
        <div class="form-group">
            <label class="lead">Password:</label>
            <input type="password" name="password" class="form-control" required/>
        </div>
        <div id="txtAlignCenter" class="form-group">
            <button class="btn btn-outline-warning" type="submit">Sign Up</button>
        </div>
    </form>
</div>